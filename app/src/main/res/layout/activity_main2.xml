<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mohamed.com.sharedanimation.Main2Activity">

    <ImageView
        android:transitionName="imagetransition"

        android:id="@+id/image_prof"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="78dp"
        android:src="@drawable/image_background" />

    <RelativeLayout
        android:id="@+id/form_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/form">

        <TextView
            android:transitionName="nametransition"

            android:id="@+id/name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Mbarki Mohamed"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:transitionName="detailTransiton"
            android:id="@+id/txt_det"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_txt"
            android:layout_centerHorizontal="true"
            android:text="hi i'm mbarki mohamed    i have 23 years old i'm software engineering"
            android:textColor="#000000"
            android:textSize="18dp" />

    </RelativeLayout>

    <ImageView
        android:transitionName="logotransition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/form_b"
        android:layout_below="@+id/form_b"
        android:layout_marginTop="53dp"
        android:src="@drawable/follow" />


</RelativeLayout>
